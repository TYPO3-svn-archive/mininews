<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
  <ROOT>
    <type>array</type>
    <el>
      <field_mode>
		<TCEforms>
			<label>LLL:EXT:mininews/locallang_db.xml:tt_content.tx_mininews_frontpage_list</label>
			<onChange>reload</onChange>
			<config>
				<type>select</type>
				<items>
					<n0>
						<n0>LLL:EXT:mininews/locallang_db.xml:tt_content.tx_mininews_frontpage_list.I.0</n0>
						<n1>ListView</n1>
					</n0>
					<n1>
						<n0>LLL:EXT:mininews/locallang_db.xml:tt_content.tx_mininews_frontpage_list.I.1</n0>
						<n1>FP</n1>
					</n1>
				</items>
				<default>ListView</default>
			</config>
		</TCEforms>
      </field_mode>
      <field_storagePage>
      	<TCEforms>
			<label>LLL:EXT:mininews/locallang_db.xml:storage.page</label>
      		<config>
	      		<type>group</type>
	      		<internal_type>db</internal_type>
	      		<allowed>pages</allowed>
	      		<prepand_tname>0</prepand_tname>
	      		<multiple>0</multiple>
	      		<minitems>0</minitems>
	      		<maxitems>1</maxitems>
	      		<size>1</size>
      		</config>
      	</TCEforms>
      </field_storagePage>
      <field_archivePage>
      	<TCEforms>
			<label>LLL:EXT:mininews/locallang_db.xml:archive.page</label>
			<displayCond>FIELD:field_mode:=:FP</displayCond>
      		<config>
	      		<type>group</type>
	      		<internal_type>db</internal_type>
	      		<allowed>pages</allowed>
	      		<prepand_tname>0</prepand_tname>
	      		<multiple>0</multiple>
	      		<minitems>1</minitems>
	      		<maxitems>1</maxitems>
	      		<size>1</size>
      		</config>
      	</TCEforms>
      </field_archivePage>
      <field_results>
      	<TCEforms>
			<label>LLL:EXT:mininews/locallang_db.xml:results_at_a_time</label>
      		<config>
	      		<type>input</type>
	      		<size>5</size>
	      		<default>3</default>
	      		<eval>required,int</eval>
	      		<range>
	      			<lower>1</lower>
	      		</range>
      		</config>
      	</TCEforms>
      </field_results>
      <field_recursive>
      	<TCEforms>
			<label>LLL:EXT:mininews/locallang_db.xml:recursive</label>
      		<config>
	      		<type>check</type>
	      		<items>
	      			<n0>
	      				<n0></n0>
	      				<n1></n1>
	      			</n0>
	      		</items>
	      		<default>0</default>
      		</config>
      	</TCEforms>
      </field_recursive>
      <field_disableSearch>
      	<TCEforms>
			<label>LLL:EXT:mininews/locallang_db.xml:disable.search</label>
			<displayCond>FIELD:field_mode:=:ListView</displayCond>
      		<config>
	      		<type>check</type>
	      		<items>
	      			<n0>
	      				<n0></n0>
	      				<n1></n1>
	      			</n0>
	      		</items>
	      		<default>0</default>
      		</config>
      	</TCEforms>
      </field_disableSearch>
      <field_templateObject>
		<TCEforms>
			<label>LLL:EXT:mininews/locallang_db.xml:tt_content.pi_flexform.select_template</label>
			<displayCond>EXT:templavoila:LOADED:true</displayCond>
			<config>
				<type>select</type>
				<items>
					<n0>
						<n0></n0>
						<n1>0</n1>
					</n0>
				</items>
				<foreign_table>tx_templavoila_tmplobj</foreign_table>
				<foreign_table_where>
					AND tx_templavoila_tmplobj.pid=###STORAGE_PID### 
					AND tx_templavoila_tmplobj.datastructure="EXT:mininews/template_datastructure.xml" 
					AND tx_templavoila_tmplobj.parent=0 
					ORDER BY tx_templavoila_tmplobj.title
				</foreign_table_where>
				<size>1</size>
				<minitems>0</minitems>
				<maxitems>1</maxitems>
			</config>
		</TCEforms>
      </field_templateObject>
    </el>
  </ROOT>
</T3DataStructure>